@model WebApplication2.Models.Car

@{
    ViewBag.Title = "Details";
}

    <!-- Topic Header -->
    <div class="topic">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h2 class="primary-font">Car #@Model.Id</h2>
                </div>
                <div class="col-md-8">
                    <ol class="breadcrumb pull-right hidden-xs">
                        <li><a href="Index.cshtml">Home</a></li>
                        <li><a href="Index.cshtml">Portfolio</a></li>
                        <li class="active">Car #@Model.Id</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row port-item-p">
            <div class="col-md-6">
                <div class="item active">
                    <img src="@Url.Content(Model.PicUrl)" class="img-responsive" alt="...">
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="first-child first-child-m primary-font">@Model.Year @Model.Make @Model.Model</h2>
                <p class="text-muted">@Model.Description</p>
                <h4>$@string.Format("{0:N0}", Model.Value)</h4>
                @if (User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("Edit Listing", "Edit", "Cars", new { id = Model.Id }, new { @class = "btn btn-color" })
                }
                else
                {
                    @Html.ActionLink("Purchase", "", "", null, new { @class = "btn btn-color" })
                }
            </div>
        </div> <!-- / .row -->
        <div class="row">
            <div class="col-xs-6" >
                <br />
                @Html.ActionLink("Back to Cars", "Index", "Cars")
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
