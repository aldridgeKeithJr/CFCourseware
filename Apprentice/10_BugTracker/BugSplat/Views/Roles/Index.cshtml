@model IEnumerable<BugSleuth.Models.RolesViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="wrap-primary">
    <div class="container boxed">

        <h2>System Roles</h2>

        <p>
            @Html.ActionLink("Add New Role", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @Html.HiddenFor(modelItem => item.RoleId)
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        @Html.ActionLink("Assign users", "AssignUsers", "UserRoles", new { id = item.RoleId }, null) |
                        @Html.ActionLink("View / Unassign users", "UsersInRole", "UserRoles", new { id = item.RoleId }, null) |
                        @Html.ActionLink("Edit", "Edit", new { id = item.RoleId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.RoleId })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
