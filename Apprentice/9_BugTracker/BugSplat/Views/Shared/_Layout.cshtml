<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <title>BugSleuth by Coder Foundry</title>

    <link rel="shortcut icon" href="~/img/bug_buddy.png"/>

    <meta name=description content="">

    <!-- CSS -->
    <link href="~/css/bootstrap.css" rel="stylesheet" media="screen">
    <link href="~/css/font-awesome.min.css" rel="stylesheet" media="screen">

    <link href="~/css/preload.css" rel="stylesheet" media="screen">
    <link href="~/css/animate.min.css" rel="stylesheet" media="screen">
    <link href="~/css/slidebars.css" rel="stylesheet" media="screen">
    <link href="~/css/lightbox.css" rel="stylesheet" media="screen">
    <link href="~/css/jquery.bxslider.css" rel="stylesheet" />
    <link href="~/css/syntaxhighlighter/shCore.css" rel="stylesheet" media="screen">

    <link href="~/css/style-green2.css" rel="stylesheet" media="screen" title="default">
    <link href="~/css/width-full.css" rel="stylesheet" media="screen" title="default">

    <link href="~/css/buttons.css" rel="stylesheet" media="screen">

    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="~/js/html5shiv.min.js"></script>
        <script src="~/js/respond.min.js"></script>
    <![endif]-->
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<!-- Preloader -->
<div id="preloader">
    <div id="status">&nbsp;</div>
</div>

<body>
    <div id="sb-site">
        <div class=" boxed">
            <nav class="navbar navbar-static-top navbar-default" role="navigation" id="header">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <i class="fa fa-bars"></i>
                        </button>
                        <a class="navbar-brand" href="~/Home/Index">Bug<span>Sleuth</span></a>
                    </div> <!-- navbar-header -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown active">
                                @Html.ActionLink("Home", "Index", "Home")
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("Administrator"))
                                {
                                    // show admin menus
                                    <li class="dropdown">
                                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">Admin</a>
                                        <ul class="dropdown-menu dropdown-menu-left">
                                            <li>@Html.ActionLink("Users", "Index", "BTUsers1")</li>
                                            <li>@Html.ActionLink("Roles", "Index", "Roles")</li>
                                            <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                                            <li>@Html.ActionLink("Tickets (all)", "Index", "Tickets", new { projectid = 0 }, null)</li>
                                            <li>@Html.ActionLink("Ticket Priorities", "Index", "TicketPriorities")</li>
                                            <li>@Html.ActionLink("Ticket Statuses", "Index", "TicketStatus")</li>
                                            <li>@Html.ActionLink("Ticket Types", "Index", "TicketTypes")</li>
                                        </ul>
                                    </li>
                                }
                                if (User.IsInRole("Developer"))
                                {
                                    // show developer menus
                                    <li class="dropdown">
                                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">Developers</a>
                                        <ul class="dropdown-menu dropdown-menu-left">
                                            <li>@Html.ActionLink("Work Tickets", "Index", "Tickets", new { id = -1 }, null)</li>
                                            <li>@Html.ActionLink("Work Projects", "Index", "Projects")</li>
                                        </ul>
                                    </li>
                                }
                                if (User.IsInRole("Submitter"))
                                {
                                    // show submitter menus
                                    <li class="dropdown">
                                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">Submitters</a>
                                        <ul class="dropdown-menu dropdown-menu-left">
                                            <li>@Html.ActionLink("Submit a Ticket", "Create", "Tickets")</li>
                                            <li>@Html.ActionLink("Track Tickets", "Index", "Tickets", new { id = -1 }, null)</li>
                                        </ul>
                                    </li>
                                }
                            }
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div><!-- navbar-collapse -->
                </div><!-- container -->
            </nav>
            @RenderBody()
            <footer id="footer">
                <p>&copy; 2014 by <a href="http://coderfoundry.com" target="_blank">Coder Foundry</a>. All rights reserved.</p>
            </footer>
        </div> <!-- boxed -->
    </div> <!-- sb-site -->
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <!-- Scripts -->
    <script src="~/js/jquery-1.11.1.min.js"></script>
    <script src="~/js/jquery.cookie.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/slidebars.js"></script>
    <script src="~/js/jquery.bxslider.min.js"></script>
    <script src="~/js/holder.js"></script>
    <script src="~/js/buttons.js"></script>
    <script src="~/js/styleswitcher.js"></script>
    <script src="~/js/jquery.mixitup.min.js"></script>
    <script src="~/js/circles.min.js"></script>

    <!-- Syntaxhighlighter -->
    <script src="~/js/syntaxhighlighter/shCore.js"></script>
    <script src="~/js/syntaxhighlighter/shBrushXml.js"></script>
    <script src="~/js/syntaxhighlighter/shBrushJScript.js"></script>

    <script src="~/js/app.js"></script>
    <script src="~/js/home_full.js"></script>

</body>

</html>
